<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">
	
	<import resource="netty-thrift-global.xml"/>
	
    <!-- ThriftServiceNode -->
	<bean id="service" class="bma.siteone.netty.thrift.remote.impl.RemoteInfoService4ThriftAI" />
	<bean id="atpService" class="bma.siteone.netty.thrift.remote.thrift.TAIRemoteInfoService.Processor">		
		<constructor-arg ref="service" />
	</bean>
	
	<bean id="thriftServiceNode" class="bma.common.thrift.servicehub.ThriftServiceNode">
		<property name="type" value="socket"/>
		<property name="port" value="9091" />				
		<property name="frameSize" value="10m"/>
		<property name="defaultModule" value="remoteInfo"/>
		<property name="serviceMap">
			<map>
				<entry key="remoteInfo" value-ref="atpService" />				
			</map>
		</property>
	</bean>

	<!-- BOOT -->
	<!-- bma.common.langutil.ai.boot.AIServerBoot -->	
	<!-- booter -->
	<bean id="booter" class="bma.common.langutil.spring.SimpleServerBooter">
        <property name="mainList">
        	<list>
        		<ref bean="thriftServiceServer"/>        		
        	</list>
        </property>
    </bean>	  

</beans>
