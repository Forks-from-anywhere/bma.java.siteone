<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">
	
	<import resource="netty-thrift-global.xml"/>
	
    <!-- Thrift Service -->
	<bean id="serviceHello" class="bma.common.thrift.sample.HelloHandler" />
	<bean id="tpHello" class="bma.common.thrift.sample.Hello.Processor">
		<constructor-arg ref="serviceHello" />
	</bean>
	<bean id="serviceHello2" class="bma.common.thrift.sample.HelloHandler">
		<property name="executor" ref="aiExecutor"/>
	</bean>
	<bean id="atpHello" class="bma.common.thrift.sample.Hello4AI.Processor">		
		<constructor-arg ref="serviceHello2" />
	</bean>
	<!--  Thrift Service Hub -->
	<bean id="serviceHubImpl" class="bma.common.thrift.servicehub.impl.ThriftServiceHubSimple">
		<property name="executor" ref="aiExecutor"/>
	</bean>
	<bean id="serviceHub" class="bma.common.thrift.servicehub.impl.ThriftServiceHub4ThriftAI">
		<property name="service" ref="serviceHubImpl"/>
	</bean>
	<bean id="atpHub" class="bma.common.thrift.servicehub.protocol.TServiceHub4AI.Processor">		
		<constructor-arg ref="serviceHub" />
	</bean>
	
	<!--  ThriftServiceServer Processor -->
	<bean id="thriftServiceProcessor" class="bma.common.thrift.TProcessorRouter">
		<property name="defaultModule" value="hello"/>
		<property name="processors">
			<map>
				<entry key="hello" value-ref="atpHello" />
				<entry key="serviceHub" value-ref="atpHub" />
			</map>
		</property>
	</bean>
	
	<!-- ThriftServiceNode -->
	<bean id="thriftServiceNode" class="bma.common.thrift.servicehub.ThriftServiceNode">
		<property name="type" value="socket"/>
		<property name="port" value="9091" />				
		<property name="frameSize" value="10m"/>
		<property name="defaultModule" value="hello"/>
		<property name="serviceMap">
			<map>
				<entry key="hello" value-ref="atpHello" />
				<entry key="serviceHub" value-ref="atpHub" />
			</map>
		</property>
	</bean>
	
	<bean id="thriftServiceServer2" class="bma.siteone.netty.thrift.core.NettyThriftServer"
		destroy-method="close">
		<property name="name" value="thriftService"/>				
		<property name="worker" value="5" />
		<property name="traceBufferSize" value="256"/>
		<property name="Pipelines">
			<list>
				<ref bean="secureFilter"/>
			</list>
		</property>
		<property name="node" ref="thriftServiceNode" />
		<property name="processExecutor" ref="syncExecutor"/>
	</bean>

	<!-- BOOT -->
	<!-- bma.common.langutil.ai.boot.AIServerBoot -->	
	<!-- booter -->
	<bean id="booter" class="bma.common.langutil.spring.SimpleServerBooter">
        <property name="main" ref="thriftServiceServer2"/>
    </bean>	  

</beans>
